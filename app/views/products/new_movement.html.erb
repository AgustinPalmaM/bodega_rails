<h1>Crear nuevo movimiento</h1>
<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <table class="table">
        <tr>
          <td><b>Nombre: </b></td>
          <td><%= @product.name %></td>
        </tr>
        <tr>
          <td><b>Referencia: </b></td>
          <td><%= @product.reference %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
<div class="row py-3">
  <div class="col-lg-12">
    <div class="card p-5">
      <%= form_with model: @movement, url: create_movement_product_path(@product) do |form| %>
        <div class="form-group">
          <%= form.label :movement_type, "Tipo de movimiento" %>
          <%= form.select :movement_type, options_for_select(Movement.get_movement_types), {}, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :quantity, "Cantidad" %>
          <%= form.number_field :quantity, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :comment, "Comentario" %>
          <%= form.text_area :comment, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.submit "Crear movimiento", class: 'btn btn-primary font-weight-bold' %>
          <%= link_to "Cancelar", product_path(@product), class: 'btn btn-danger font-weight-bold' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
