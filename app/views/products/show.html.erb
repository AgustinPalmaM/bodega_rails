<div class="row">
  <div class="col-lg-12">
    <h1>Detalle producto</h1>
    <div class="py-3">
      <%= link_to  "Volver a productos", products_path, class: 'btn btn-primary font-weight-bold' %>
      <%= link_to  "Editar producto", edit_product_path(@product), class: 'btn btn-warning font-weight-bold' %>
      <%= link_to "Borrar producto", @product, method: :delete, class: 'btn btn-danger font-weight-bold' %>
    </div>
    <div class="card">
      <table class="table">
        <tr>
          <td><b>Nombre del producto</b></td>
          <td><%= @product.name %></td>
        </tr>
        <tr>
          <td><b>Referencia del producto</b></td>
          <td><%= @product.reference %></td>
        </tr>
        <tr>
          <td><b>Descripcion del producto</b></td>
          <td><%= @product.description %></td>
        </tr>
        <tr>
          <td><b>Cantidad actual del producto</b></td>
          <td>0</td>
        </tr>
        <tr>
          <td><b>Fecha de creacion del producto</b></td>
          <td><%= @product.created_at.strftime("%d-%m-%Y") %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
